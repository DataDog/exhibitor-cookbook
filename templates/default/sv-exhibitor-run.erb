#!/bin/sh
exec 2>&1
<% limits = node['exhibitor']['ulimits'] -%>
<% if limits && !limits.empty? -%>
<% limits.each { |option, value| -%>
ulimit -<%= option %> <%= value %>
<% } -%>
<% end -%>
exec chpst -u <%= @options[:user] %> \
  <%= @options[:java_home] %>/bin/java -Dlog4j.configuration=file://<%= @options[:log4j] %> \
  -jar <%= @options[:jar] %> <%= @options[:cli] %>
